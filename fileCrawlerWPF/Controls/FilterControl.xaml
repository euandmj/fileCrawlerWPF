<UserControl x:Class="fileCrawlerWPF.Controls.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fileCrawlerWPF.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="500">
    <Grid Background="White">
        <DockPanel
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            
            <GroupBox x:Name="groupBox"
                      Margin="5 5 5 5"
                      Width="auto"
                      DockPanel.Dock="Top"
                      HorizontalContentAlignment="Stretch"
                      Header="{Binding Path=Title}">

                <Grid Width="auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush"
                                    Value="Pink" />
                            <Setter Property="BorderThickness"
                                    Value="5" />
                        </Style>
                        <Style TargetType="local:FilterContextCheckBox">
                            <Setter Property="Margin"
                                    Value="3 8 0 0" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Right" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="Margin"
                                    Value="5 5 5 5" />
                            <Setter Property="BorderBrush"
                                    Value="Black" />
                            <Setter Property="BorderThickness"
                                    Value="1" />
                            <Setter Property="Width"
                                    Value="15" />
                            <Setter Property="Height"
                                    Value="15" />
                            <EventSetter Event="Checked"
                                         Handler="FilterCheckChanged" />
                            <EventSetter Event="Unchecked"
                                         Handler="FilterCheckChanged" />
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="FontSize"
                                    Value="15 " />
                            <Setter Property="Height"
                                    Value="25" />
                            <Setter Property="Width"
                                    Value="100" />
                            <Setter Property="IsReadOnly"
                                    Value="False" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Right" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                        </Style>
                        <Style TargetType="Label">
                            <Setter Property="FontSize"
                                    Value="13" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Right" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                        </Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Margin"
                                    Value="5 5 5 5" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Right" />
                        </Style>
                    </Grid.Resources>


                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.Column="0">
                        <Label Content="Resolution" />
                        <TextBox x:Name="txtResolution"
                                 PreviewTextInput="Numerical_PreviewText" />
                        <local:FilterContextCheckBox x:Name="chkResolution" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.Column="1">
                        <Label Content="Framerate" />
                        <TextBox x:Name="txtFramerate"
                                 PreviewTextInput="Numerical_PreviewText" />
                        <local:FilterContextCheckBox x:Name="chkFrameRate"
                                                     FilterContext="Framerate" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.RowSpan="1"
                                Grid.Column="2">
                        <Button x:Name="btnClear"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Background="Transparent"
                                VerticalAlignment="Center"
                                AutomationProperties.HelpText="Reset Filter"
                                HorizontalAlignment="Right"
                                Click="btnClear_Click">
                            <Image Source="/Content/reset.png"
                                   Width="35"
                                   Height="35" />
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="0">
                        <Label Content="Video Codec" />
                        <TextBox x:Name="txtVCodec" />
                        <local:FilterContextCheckBox x:Name="chkVCodec"
                                                     FilterContext="VideoCodec" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.RowSpan="2">
                        <Label Content="Name"
                               VerticalAlignment="Top" />
                        <RichTextBox x:Name="txtName"
                                     Height="auto"
                                     Width="100"
                                     Grid.RowSpan="1" />
                        <local:FilterContextCheckBox x:Name="chkName"
                                                     FilterContext="Name" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                Grid.Column="0">
                        <Label Content="Audio Codec" />
                        <TextBox x:Name="txtACodec" />
                        <local:FilterContextCheckBox x:Name="chkACodec"
                                                     FilterContext="AudioCodec" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="2"
                                Grid.Column="2">
                        <Label Content="0" HorizontalAlignment="Right" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Grid.Column="2">
                        <Button x:Name="btnFilter"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Background="Transparent"
                                VerticalAlignment="Center"
                                AutomationProperties.HelpText="Filter"
                                HorizontalAlignment="Right"
                                Click="btnFilter_Click">
                            <Image Source="/Content/filter.png"
                                   Width="35"
                                   Height="35" />
                        </Button>
                    </StackPanel>
                    <ListBox x:Name="lvFilter"
                             Width="auto"
                             Height="auto"
                             Grid.Row="3"
                             Grid.Column="0"
                             Grid.ColumnSpan="4"
                             BorderBrush="Black"
                             ItemsSource="{Binding Path=FilteredItems}"
                             DisplayMemberPath="Name"
                             SelectionChanged="lvFilter_SelectionChanged">

                    </ListBox>
                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</UserControl>
