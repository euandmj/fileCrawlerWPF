<Window x:Class="fileCrawlerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:fileCrawlerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1210" ResizeMode="CanMinimize">
    <Grid RenderTransformOrigin="0.526,0.471">
        <Grid.RowDefinitions>
            <RowDefinition Height="233*"/>
            <RowDefinition Height="638*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>
        <!--<TextBox x:Name="DirectoryTxt" HorizontalAlignment="Left" Height="23" Margin="10,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="500"/> -->
        <extToolkit:WatermarkTextBox x:Name="dirText" Watermark="Enter Directory Here" Margin="10,23,4,166" FontSize="18"/>
        <Button x:Name="ScanBttn" Content="Scan" HorizontalAlignment="Left" Margin="1,31,0,0" VerticalAlignment="Top" Width="75" Click="ScanBttn_Click" Grid.Column="1"/>
        <GroupBox Header="File Information" HorizontalAlignment="Left" Height="297" Margin="195,30,0,0" VerticalAlignment="Top" Width="450" FontSize="18" FontStyle="Italic" Grid.Column="1" Grid.RowSpan="2">
            <Image x:Name="thumbnail" HorizontalAlignment="Left" Height="150" Margin="150,103,0,0" VerticalAlignment="Top" Width="151"/>
        </GroupBox>
        <ListBox x:Name="AllFilesListBox" HorizontalAlignment="Left" Height="269" Margin="10,58,0,0" VerticalAlignment="Top" Width="700" SelectionChanged="AllFilesListBox_SelectionChanged" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <GroupBox Header="Filters" HorizontalAlignment="Left" Height="164" Margin="10,127,0,0" VerticalAlignment="Top" Width="698" FontSize="18" FontStyle="Italic" Grid.ColumnSpan="2" Grid.Row="1">
            <ComboBox HorizontalAlignment="Left" Margin="326,117,0,0" VerticalAlignment="Top" Width="120"/>

        </GroupBox>
        <Label Content="Resolution" HorizontalAlignment="Left" Margin="18,159,0,0" VerticalAlignment="Top" FontSize="14" Grid.Row="1"/>
        <TextBox x:Name="fWidth" HorizontalAlignment="Left" Height="23" Margin="98,161,0,0" TextWrapping="Wrap" Text="1920" VerticalAlignment="Top" Width="50" TextAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="fHeight" HorizontalAlignment="Left" Height="23" Margin="157,161,0,0" TextWrapping="Wrap" Text="1080" VerticalAlignment="Top" Width="50" TextAlignment="Center" Grid.Row="1"/>
        <Label Content="x" HorizontalAlignment="Left" Margin="145,161,0,0" VerticalAlignment="Top" FontSize="11" Grid.Row="1"/>
        <Label Content="Video Codec" HorizontalAlignment="Left" Margin="18,199,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="fVidCodec" HorizontalAlignment="Left" Height="23" Margin="98,199,0,0" TextWrapping="Wrap" Text="mp4" VerticalAlignment="Top" Width="109" TextAlignment="Center" Grid.Row="1"/>
        <Label Content="Audio Codec" HorizontalAlignment="Left" Margin="18,227,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="fAudCodec" HorizontalAlignment="Left" Height="23" Margin="98,227,0,0" TextWrapping="Wrap" Text="mp3" VerticalAlignment="Top" Width="109" TextAlignment="Center" Grid.Row="1"/>
        <Label Content="Duration" HorizontalAlignment="Left" Margin="18,257,0,0" VerticalAlignment="Top" FontSize="14" Grid.Row="1"/>
        <TextBox x:Name="fDur" HorizontalAlignment="Left" Height="24" Margin="98,259,0,0" TextWrapping="Wrap" Text="x" VerticalAlignment="Top" Width="109" TextAlignment="Center" Grid.Row="1" IsEnabled="False"/>
        <TextBox x:Name="fFPS" HorizontalAlignment="Left" Height="27" Margin="329,161,0,0" TextWrapping="Wrap" Text="60" VerticalAlignment="Top" Width="60" TextAlignment="Center" Grid.Row="1"/>
        <Label Content="Framerate" HorizontalAlignment="Left" Margin="249,157,0,0" VerticalAlignment="Top" FontSize="14" Grid.Row="1"/>
        <CheckBox x:Name="fResChecked" Content="" HorizontalAlignment="Left" Margin="212,165,0,0" VerticalAlignment="Top" Width="16" Grid.Row="1"/>
        <CheckBox x:Name="fVCodecChecked" Content="" HorizontalAlignment="Left" Margin="212,203,0,0" VerticalAlignment="Top" Width="16" Grid.Row="1"/>
        <CheckBox x:Name="fACodecChecked" Content="" HorizontalAlignment="Left" Margin="212,231,0,0" VerticalAlignment="Top" Width="16" Grid.Row="1"/>
        <CheckBox x:Name="fDurChecked" Content="" HorizontalAlignment="Left" Margin="212,263,0,0" VerticalAlignment="Top" Width="16" Grid.Row="1" IsEnabled="False"/>
        <CheckBox x:Name="fFramesChecked" Content="" HorizontalAlignment="Left" Margin="438,167,0,0" VerticalAlignment="Top" Width="16" Grid.Row="1"/>
        <Button x:Name="FilterApplyButton" Content="Apply" HorizontalAlignment="Left" Margin="524,238,0,0" VerticalAlignment="Top" Width="74" Click="FilterApplyButton_Click" Grid.ColumnSpan="2" Grid.Row="1"/>
        <ListBox x:Name="FilesListBox_Preview" HorizontalAlignment="Left" Height="269" Margin="10,296,0,0" VerticalAlignment="Top" Width="700" Grid.ColumnSpan="2" SelectionChanged="FilesListBox_Preview_SelectionChanged" Grid.Row="1"/>

        <Button x:Name="ScanBttn_Copy" Content="Export As Text" HorizontalAlignment="Left" Margin="10,570,0,0" VerticalAlignment="Top" Width="110" Click="ScanBttn_Copy_Click" Grid.Row="1"/>
        <Label Content="File Name" HorizontalAlignment="Left" Margin="207,60,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1"/>
        <TextBox x:Name="previewName" HorizontalAlignment="Left" Height="22" Margin="210,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430" IsReadOnly="True" Grid.Column="1"/>
        <Label Content="Full Path" HorizontalAlignment="Left" Margin="207,100,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1"/>
        <TextBox x:Name="previewPath" HorizontalAlignment="Left" Height="35" Margin="210,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430" IsReadOnly="True" FontSize="9" Grid.Column="1"/>
        <Label Content="Resolution" HorizontalAlignment="Left" Margin="207,145,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1"/>
        <TextBox x:Name="previewResol" HorizontalAlignment="Left" Height="22" Margin="210,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1"/>
        <Label Content="Frame Rate" HorizontalAlignment="Left" Margin="207,178,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1"/>
        <TextBox x:Name="previewFPS" HorizontalAlignment="Left" Height="22" Margin="210,193,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1"/>
        <Label Content="Video Codec" HorizontalAlignment="Left" Margin="207,212,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1"/>
        <TextBox x:Name="previewVidCodec" HorizontalAlignment="Left" Height="22" Margin="210,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.RowSpan="2"/>
        <Label Content="Audio Codec" HorizontalAlignment="Left" Margin="207,13,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewAudioCodec" HorizontalAlignment="Left" Height="22" Margin="210,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Total Files Found" HorizontalAlignment="Left" Margin="80,14,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1"/>
        <TextBox x:Name="totalFilesCount" HorizontalAlignment="Left" Height="22" Margin="81,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="91" IsReadOnly="True" Grid.Column="1"/>
        <Label x:Name="filterMatches" Content="Total Matches:" HorizontalAlignment="Left" Margin="67,238,0,0" VerticalAlignment="Top" Width="99" FontSize="11" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="FilterApplyButton_Copy" Content="Clear Results" HorizontalAlignment="Left" Margin="503,263,0,0" VerticalAlignment="Top" Width="95" Click="FilterApplyButton_Copy_Click" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Button x:Name="openFileBtn" Content="Open File" HorizontalAlignment="Left" Margin="549,69,0,0" VerticalAlignment="Top" Width="91" Grid.Column="1" Click="Button_Click" Grid.Row="1"/>
        <TextBox x:Name="fName" HorizontalAlignment="Left" Height="23" Margin="329,203,0,0" TextWrapping="Wrap" Text="Shrek 3" VerticalAlignment="Top" Width="170" TextAlignment="Center" Grid.Row="1"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="249,199,0,0" VerticalAlignment="Top" FontSize="14" Grid.Row="1"/>
        <CheckBox x:Name="fNameChecked" Content="" HorizontalAlignment="Left" Margin="510,207,0,0" VerticalAlignment="Top" Width="16" Grid.Row="1"/>
        <Button x:Name="openFolderBtn" Content="Open Folder" HorizontalAlignment="Left" Margin="549,44,0,0" VerticalAlignment="Top" Width="91" Grid.Column="1" Click="openFolderBtn_Click" Grid.Row="1"/>
        <GroupBox Header="File Information" HorizontalAlignment="Left" Height="422" Margin="195,128,0,0" VerticalAlignment="Top" Width="450" FontSize="18" FontStyle="Italic" Grid.Column="1" Grid.Row="1">
            <Image x:Name="thumbnail1" HorizontalAlignment="Left" Height="150" Margin="225,120,0,0" VerticalAlignment="Top" Width="152"/>
        </GroupBox>
        <Label Content="File Name" HorizontalAlignment="Left" Margin="207,173,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewName_Copy" HorizontalAlignment="Left" Height="22" Margin="210,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Full Path" HorizontalAlignment="Left" Margin="207,213,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewPath_Copy" HorizontalAlignment="Left" Height="37" Margin="210,228,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="430" IsReadOnly="True" FontSize="9" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Resolution" HorizontalAlignment="Left" Margin="207,262,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewResol_Copy" HorizontalAlignment="Left" Height="22" Margin="210,277,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Frame Rate" HorizontalAlignment="Left" Margin="207,297,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewFPS_Copy" HorizontalAlignment="Left" Height="22" Margin="210,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Video Codec" HorizontalAlignment="Left" Margin="207,339,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewVidCodec_Copy" HorizontalAlignment="Left" Height="22" Margin="210,354,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Audio Codec" HorizontalAlignment="Left" Margin="207,381,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewAudioCodec_Copy" HorizontalAlignment="Left" Height="22" Margin="210,396,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="openFileBtn_Copy" Content="Open File" HorizontalAlignment="Left" Margin="549,524,0,0" VerticalAlignment="Top" Width="91" Grid.Column="1" Click="openFileBtn_Copy_Click" Grid.Row="1"/>
        <Button x:Name="openFolderBtn_Copy" Content="Open Folder" HorizontalAlignment="Left" Margin="549,499,0,0" VerticalAlignment="Top" Width="91" Grid.Column="1" Click="openFolderBtn_Copy_Click" Grid.Row="1"/>
        <Label Content="File Size" HorizontalAlignment="Left" Margin="207,45,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewFileSize" HorizontalAlignment="Left" Height="22" Margin="210,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="exportTextLabel" Content="Label" HorizontalAlignment="Left" Margin="121,570,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="9" FontStyle="Italic" Visibility="Hidden"/>
        <Label Content="File Size" HorizontalAlignment="Left" Margin="207,427,0,0" VerticalAlignment="Top" Width="68" FontSize="8" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="previewFileSize_Copy" HorizontalAlignment="Left" Height="22" Margin="210,443,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" Grid.Column="1" Grid.Row="1"/>
        <ComboBox x:Name="fpsCombox" HorizontalAlignment="Left" Margin="391,161,0,0" Grid.Row="1" VerticalAlignment="Top" Width="39" Height="27" SelectedIndex="0" FontSize="14">
            <Label Content="&gt;"/>
            <Label Content="&lt;"/>
            <Label Content="="/>
        </ComboBox>


    </Grid>
</Window>
